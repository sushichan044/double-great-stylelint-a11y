{
  "name": "@double-great/stylelint-a11y",
  "version": "3.0.4",
  "description": "Plugin for stylelint with a11y rules",
  "main": "src/index.js",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./recommended": "./recommended.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/double-great/stylelint-a11y.git"
  },
  "author": "@double-great",
  "license": "MIT",
  "keywords": [
    "stylelint",
    "stylelint-plugin",
    "a11y",
    "accessibility"
  ],
  "engines": {
    "node": ">=18.12.0"
  },
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "pretest": "npm run lint && npm run format:check",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "peerDependencies": {
    "stylelint": ">=16.0.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-stylelint": "^21.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-light-runner": "^0.6.0",
    "jest-preset-stylelint": "^7.0.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1"
  },
  "bugs": {
    "url": "https://github.com/double-great/stylelint-a11y/issues"
  },
  "homepage": "https://github.com/double-great/stylelint-a11y#readme",
  "dependencies": {
    "postcss": "^8.4.33"
  }
}
